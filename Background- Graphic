//called in Lab07
import java.awt.*;
import java.applet.*;
public class Background
{
   public static void drawSky(Graphics g)
   {
      g.setColor(new Color(30,41,89));
      g.fillRect(0,0,1000,500);
   }
   public static void drawGround(Graphics g)
   {
      g.setColor (new Color(60,124,44));
      g.fillRect(0,500,1000,200);
   }
   public static void drawMoon(Graphics g)
   {
      g.setColor(Color.yellow);
      g.fillOval(50,80,150,150);
   }
}
