   {
      g.setColor(new Color(179,166,9));
      g.fillRect(420,125,50,50);
      g.setColor(Color.black);
      g.fillRect(500,125,50,50);
      g.fillRect(420,200,50,50);
      g.fillRect(500,200,50,50);
      g.setColor(new Color(179,166,9));
      g.fillRect(420,275,50,50);
      g.setColor(Color.black);
      g.fillRect(500,275,50,50);
      g.setColor(new Color(179,166,9));
      g.fillRect(420,350,50,50);
      g.fillRect(500,350,50,50);
      g.fillRect(420,425,50,50);
      g.fillRect(500,425,50,50);
   }
   public static void drawBuilding3(Graphics g)
   {
      g.setColor(Color.darkGray);
      g.fillRect(700,150,150,400);
   }
   public static void drawWindow3 (Graphics g)
   {
      g.setColor(Color.black);
      g.fillRect(720,175,50,50);
      g.setColor(new Color(179,166,9));
      g.fillRect(780,175,50,50);
      g.fillRect(720,250,50,50);
      g.setColor(Color.black);
