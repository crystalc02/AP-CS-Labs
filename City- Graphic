//part of lab07 graphics main
import java.awt.*;
import java.applet.*;
public class City
{
   public static void drawBuilding1(Graphics g)
   {
      g.setColor(Color.darkGray);
      g.fillRect(150,200,150,350);
   }
   public static void drawWindow1(Graphics g)
   {
      g.setColor(new Color(179,166,9));
      g.fillRect(170,225,50,50);
      g.fillRect(235,225,50,50);
      g.setColor(Color.black);
      g.fillRect(170,300,50,50);
      g.setColor(new Color(179,166,9));
      g.fillRect(235,300,50,50);
      g.fillRect(170,375,50,50);
      g.setColor(Color.black);
      g.fillRect(235,375,50,50);
      g.fillRect(170,450,50,50);
      g.setColor(new Color(179,166,9));
      g.fillRect(235,450,50,50);
   }
   public static void drawBuilding2(Graphics g)
   {
      g.setColor(Color.darkGray);
      g.fillRect(400,100,175,450);  
   }
